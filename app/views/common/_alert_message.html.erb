<% flash.each do |key, msg| %>
  <% class_name = key == 'notice' ? 'alert-success' : 'alert-danger' %>
  <div class="alert <%= class_name %> alert-dismissible fade show" role="alert">
    <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

