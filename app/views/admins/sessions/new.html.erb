<div class="container py-5 h-100">
  <div class="row d-flex align-items-center justify-content-center h-100">
    <div class="col-4">
      <div class="text-center mb-3">
        <h3>Desgin App</h3>
      </div>
      <%= form_tag '/admins/sign_in', method: :post do %>
        <div class="mb-3">
          <%= label_tag 'Email-Id', nil, class: 'form-lable', for: 'user_email' %>
          <%= text_field_tag 'user[email]', params.try(:[], :user).try(:[], :email), class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= label_tag 'Password', nil, class: 'form-lable', for: 'user_password' %>
          <%= password_field_tag 'user[password]', '', class: 'form-control' %>
        </div>
        <%= button_tag 'Login', class: 'btn btn-lg btn-primary' %>
      <% end %>
    </div>
  </div>
</div>